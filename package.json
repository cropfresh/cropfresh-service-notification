{
    "name": "cropfresh-service-notification",
    "version": "1.0.0",
    "description": "Notification service for SMS, push notifications, and multi-language templates",
    "main": "index.js",
    "scripts": {
        "build": "tsc",
        "dev": "nodemon --watch src --exec ts-node src/index.ts",
        "start": "node dist/index.js",
        "test": "jest --coverage",
        "test:watch": "jest --watch",
        "proto:generate": "proto-loader-gen-types --longs=String --enums=String --defaults --oneofs --grpcLib=@grpc/grpc-js --outDir=src/protos protos/proto/notification.proto"
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "type": "commonjs",
    "dependencies": {
        "@grpc/grpc-js": "1.12",
        "@grpc/proto-loader": "^0.7.15",
        "@opentelemetry/auto-instrumentations-node": "^0.67.2",
        "@opentelemetry/exporter-trace-otlp-http": "^0.208.0",
        "@opentelemetry/resources": "^2.2.0",
        "@opentelemetry/sdk-node": "^0.208.0",
        "@opentelemetry/semantic-conventions": "^1.38.0",
        "@prisma/adapter-pg": "7.0",
        "@prisma/client": "7.0",
        "express": "^5.1.0",
        "pino": "^10.1.0",
        "pino-http": "^11.0.0",
        "pino-pretty": "11.3",
        "prom-client": "^15.1.3",
        "uuid": "^13.0.0"
    },
    "devDependencies": {
        "@types/express": "5.0",
        "@types/jest": "^29.5.12",
        "@types/node": "^22.19.1",
        "@types/pino-http": "^5.8.4",
        "@types/uuid": "^10.0.0",
        "dotenv": "^17.2.3",
        "jest": "^29.7.0",
        "jest-mock-extended": "^4.0.0",
        "nodemon": "3.1",
        "prisma": "7.0",
        "ts-jest": "^29.2.5",
        "ts-node": "10.9",
        "typescript": "5.7"
    }
